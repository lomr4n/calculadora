<style>
  * {
    margin: 0px auto;
    font-family: Arial, Helvetica, sans-serif;
  }

  header {
    width: 100%;
    height: 10vh;
    background-color:#512DA8;
  }

  nav {
    width: 100%;
    height: 100%;
  }

  .title {
    width: 24%;
    height: 100%;
    float: left;
  }

  .title h2 {
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: left;
  }

  nav ul {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    height: 100%;
    width: 70%;
    float: right;
  }

  nav ul li {
    padding: 5px 25px;
    background-color: rgba(255, 255, 255, 0.178);
    list-style: none;
    font-size: 12px;
    font-weight: 500;
    border-radius: 5px;
    transition: 0.4s all;
  }

  h2,
  h2 a {
    font-size: 20px;
    color: rgb(0, 0, 0);
    font-weight: bold;
    text-decoration: none;
  }

  nav ul li a {
    text-decoration: none;
    color: rgb(26, 26, 26);
  }

  nav ul li:hover a {
    color: black;
  }

  nav ul li:hover {
    background-color: white;
    border-radius: 10px;
  }
</style>
<header>
  <nav>
    <div class="title">
      <h2>
        <a href="/">Calculadora</a>
      </h2>
    </div>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/about">About</a>
      </li>
    </ul>
  </nav>
</header>